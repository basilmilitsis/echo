{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDirs": ["src", "__tests__"],
        "baseUrl": "./",
        "paths": {
            "@root/*": ["./src/*"]
        },
        "outDir": ".build",
        "inlineSourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
        ]
    },
    "include": [
        "src",
        "__tests__"
    ]
}
