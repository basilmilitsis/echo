{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "local:launch",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/.dist/index.js"
        },
        {
            "name": "docker:attach",
            "type": "node",
            "restart": true,
            "request": "attach",
            "port": <%=apiDebuggerPort%>,
            "address": "localhost",
            "remoteRoot": "/app/api/<%=apiName%>",
            "localRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}