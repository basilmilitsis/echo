    "main": ".dist/index.js",
    "typings": ".dist/index.d.ts",
    "bin": {
        "builder": ".dist/index.js"
    },
    "scripts": {
        "build:clean": "pnpm custom:unlink && rm -rf .dist",
        "build:assets:copy": "(cd ./src && find ./ -regex '.*\\.ejs$' -exec cp --parents {} ../.dist/ \\;)",
        "build:compile": "tsc && tsc-alias",
        "build:post": "pnpm custom:unlink && pnpm custom:link",
        "build": "pnpm build:clean && pnpm build:compile && pnpm build:assets:copy && pnpm build:post",
        "package": ":",
        "custom:link": "npm install --global",
        "custom:unlink": "npm uninstall --global builder",
        "test": "jest",
        "dev:start": "node --inspect=0.0.0.0:9229 .",
        "dev": "pnpm build && pnpm dev:start",
        "start": "node ."
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/js-yaml": "~4.0.7",
        "@types/node": "^20.4.10",
        "@types/voca": "^1.4.2",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "ejs": "^3.1.9",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.2.3",
        "jest": "^29.6.2",
        "prettier": "^3.0.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6",
        "@types/ejs": "~3.1.3"
    },
    "dependencies": {
        "@echo/lib-common": "workspace:^1.0.0",
        "commander": "^11.0.0",
        "dotenv": "~16.3.1",
        "source-map-support": "^0.5.21",
        "ts-json-schema-generator": "^1.3.0",
        "tsc-alias": "^1.8.7",
        "voca": "^1.4.1",
        "js-yaml": "~4.1.0"
    }
}
